---
const { kicker = '', title = '', lead = '' } = Astro.props as { kicker?: string; title?: string; lead?: string };
---
<div class="text-center max-w-3xl mx-auto">
  {kicker && <p class="uppercase tracking-widest text-neon-cyan/80 text-xs">{kicker}</p>}
  <h2 class="mt-2 mb-8 pb-2 text-3xl sm:text-4xl md:text-5xl font-semibold leading-[1.45] bg-clip-text text-transparent bg-gradient-to-r from-neon-cyan via-neon-blue to-neon-purple">
    {title}
  </h2>
  {lead && <p class="text-white/80 leading-relaxed">{lead}</p>}
</div>




