---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import SectionHeading from '@/components/SectionHeading.astro';
import TimelineItem from '@/components/TimelineItem.astro';
import StarsBG from '@/components/StarsBG.astro';
import ExperimentTabs from '@/components/ExperimentTabs.astro';
import { Image } from 'astro:assets';
import heroImg from '@/assets/hero.jpg';

const meta = {
  title: 'ASDS Space Technologies Ltd.',
  description: 'Space Technology company developing small dragsail solution'
};

const team = [
{ name: 'FEJES Dániel', role: 'Chief Executive Officer', img: '/team/DanielF.jpg', links: { linkedin: '#', github: '#' } },
{ name: 'KOVÁTS Bence', role: 'Project Manager', img: '/team/BenceK.jpg', links: { linkedin: '#', github: '#' } },
{ name: 'BORSI Szilárd', role: 'Simulation Expert', img: '/team/SzilardB.jpg', links: { linkedin: '#', github: '#' } },
{ name: 'KREINICKER Gábor', role: 'Chief Engineer', img: '/team/GaborK.jpg', links: { linkedin: '#', github: '#' } },
{ name: 'GITTA Márton', role: 'Testing Lead', img: '/team/MartonG.jpg', links: { linkedin: '#', github: '#' } },
];
---

<BaseLayout title={meta.title} description={meta.description}>
  <Header />

  <main id="content" class="scroll-stage">
    <section class="panel" data-slide="10px">
      <div class="panel-content">
        <div class="relative isolate mx-auto w-full max-w-7xl px-4 sm:px-6 lg:px-8">
          <StarsBG />
          <div class="relative z-10 grid gap-10 md:grid-cols-2 items-center">
            <div>
              <h1 class="mt-2 text-4xl sm:text-5xl md:text-6xl font-semibold leading-tight bg-clip-text text-transparent bg-gradient-to-r from-neon-cyan via-neon-blue to-neon-purple">
                A TunaCan sized deorbit module built for CubeSats.
              </h1>
              <p class="mt-5 text-white/80 max-w-prose">
                The dragsail fits inside the TunaCan volume and carries a dragsail & autonomous avionics to pull 1U-6U missions back to Earth within regulatory timelines.
              </p>
              <div class="mt-8 flex flex-wrap gap-3">
                <!-- TODO: remove this comment after consolidating architecture -->
                <!-- <a href="#experiment" class="rounded-xl bg-white/10 hover:bg-white/20 px-5 py-3 border border-space-line transition">See architecture</a> -->
                <a href="/#contact" class="rounded-xl bg-gradient-to-r from-neon-blue to-neon-purple hover:opacity-90 px-5 py-3 transition shadow-glow">Contact us</a>
              </div>
            </div>
            <div class="relative">
              <div class="card p-6">
                <Image src={heroImg} alt="Image of a galaxy cluster" class="rounded-lg" loading="lazy" />
                <p class="mt-3 text-white/70 text-sm">Image credit: ESA/Hubble & NASA, S. Veilleux, J. Wang, J. Greene.
                Once we have our first render it will go here. For now look at this cool space picture. Disclaimer: the website is still work-in-progress. Expect more information in the future.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

